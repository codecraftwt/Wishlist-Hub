<div
  class="wishlist-counter position-{{ block.settings.position }} slide-{{ block.settings.slide_direction }}"
  x-data="wishlistCounter()"
  x-init="init()"
  @wishlist-updated.window="handleUpdate($event.detail)"
  data-shop-currency="{{ shop.currency }}"
>
  <button
    @click="goToWishlist()"
    class="counter-button"
    :class="{ 'has-items': count > 0 }"
    aria-label="View Wishlist"
  >
    {% if block.settings.icon == 'star' %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="20"
      height="20"
      fill="none"
      stroke="{{ block.settings.text_color }}"
      stroke-width="{{ block.settings.stroke_width }}"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
    {% else %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="20"
      height="20"
      fill="none"
      stroke="{{ block.settings.text_color }}"
      stroke-width="{{ block.settings.stroke_width }}"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
    </svg>
    {% endif %}

    <span class="count-badge" x-show="count > 0" x-text="count"></span>
  </button>

  <div
    class="wishlist-slider-overlay"
    x-show="showSlider"
    x-cloak
    x-transition:enter="transition ease-in-out duration-400"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in-out duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    @click="showSlider = false"
  >
  <div
    class="wishlist-slider"
    @click.stop
    x-show="showSlider"
    x-cloak
    style="{% if block.settings.slide_direction == 'left' %}left: 0; right: auto;{% else %}right: 0; left: auto;{% endif %}"
    x-transition:enter="transition ease-out duration-1000"
    x-transition:enter-start="opacity-0 {% if block.settings.slide_direction == 'left' %}translate-x-[-100%] {% else %}translate-x-[100%] {% endif %}scale-90 rotate-[-5deg]"
    x-transition:enter-end="opacity-100 translate-x-0 scale-100 rotate-0"
    x-transition:leave="transition ease-in duration-600"
    x-transition:leave-start="opacity-100 translate-x-0 scale-100 rotate-0"
    x-transition:leave-end="opacity-0 {% if block.settings.slide_direction == 'left' %}translate-x-[-100%] {% else %}translate-x-[100%] {% endif %}scale-95 rotate-[-5deg]"
  >
      <div class="slider-header">
        <h2>Your Wishlist</h2>
        <button @click="showSlider = false" class="close-btn">&times;</button>
      </div>

      <div class="slider-content" x-show="wishlistItems.length > 0">
        <template x-for="item in wishlistItems">
          <div class="wishlist-item">
            <button @click="removeItem(item.id, item.productId)" class="remove-cross" title="Remove item">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="28"
                height="28"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
            <img :src="item.productImage" :alt="item.productTitle" width="80" height="80" class="item-image">
            <div class="item-details">
              <h3 x-text="item.productTitle"></h3>
              <p class="price">Price: <span x-text="getCurrencySymbol(item.currency || this.currency) + (item.price ? parseFloat(item.price).toFixed(2) : 'N/A')"></span></p>
              <div class="item-actions">
                <button @click="addToCart(item)" class="add-to-cart-btn">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="16"
                    height="16"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="9" cy="21" r="1"/>
                    <circle cx="20" cy="21" r="1"/>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                  </svg>
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        </template>
      </div>

      <div class="empty-state" x-show="wishlistItems.length === 0">
        <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem; padding: 2rem;">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="color: #ccc;">
            <path d="M9 5H7a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2M9 5a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2M9 5a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2m-3 7h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 12.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="currentColor"/>
          </svg>
          <h3 style="margin: 0; font-size: 1.2rem; color: #333;">Your wishlist is empty</h3>
          <p style="margin: 0; color: #666; text-align: center;">Add more items to this wishlist and see them here.</p>
          <a href="/collections/all" style="color: #007bff; text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border: 1px solid #007bff; border-radius: 4px;">Browse products →</a>
        </div>
      </div>
    </div>
  </div> 
</div>

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
  toastr.options = {
    closeButton: true,
    newestOnTop: true,
    progressBar: true,
    positionClass: "toast-top-right",
    showDuration: "300",
    hideDuration: "1000",
    timeOut: "3000",
    extendedTimeOut: "1000",
    showEasing: "swing",
    hideEasing: "linear",
    showMethod: "fadeIn",
    hideMethod: "fadeOut",
  };

  document.addEventListener('alpine:init', () => {
    Alpine.data('wishlistCounter', () => ({
      apiUrl: 'https://wishlist-hub.onrender.com',
      customerId: '{{ customer.id }}',
      shop: '{{ shop.id }}',
      currency: null,
      count: 0,
      wishlistItems: [],
      showSlider: false,
      isLoading: true,
      isLoggedIn: !!'{{ customer.id }}',


      async init() {
        this.currency = document.querySelector('[data-shop-currency]').getAttribute('data-shop-currency') || 'USD';
        if (this.isLoggedIn && localStorage.getItem('guestWishlist')) {
          const localStorageItems = JSON.parse(localStorage.getItem('guestWishlist') || '[]');
          if (localStorageItems.length > 0) {
            try {
              const response = await fetch(`${this.apiUrl}/api/wishlist`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action: 'MIGRATE', customerId: this.customerId, localStorageItems }),
                credentials: 'include',
              });
              if (response.ok) {
                localStorage.removeItem('guestWishlist');
              }
            } catch (error) {
              console.error('Migration error:', error);
            }
          }
        }

        if (this.isLoggedIn && this.shop) {
          await this.fetchCount();
        } else {
          this.loadFromLocalStorage();
        }
      },

      getCurrencySymbol() {
        const symbols = {
          'USD': '$',
          'EUR': '€',
          'GBP': '£',
          'JPY': '¥',
          'CAD': 'C$',
          'AUD': 'A$',
          'CHF': 'CHF',
          'CNY': '¥',
          'INR': '₹',
          'BRL': 'R$',
          'MXN': '$',
          'KRW': '₩',
          'RUB': '₽',
          'ZAR': 'R',
          'TRY': '₺',
          'SEK': 'kr',
          'NOK': 'kr',
          'DKK': 'kr',
          'PLN': 'zł',
          'CZK': 'Kč',
          'HUF': 'Ft',
          'ILS': '₪',
          'SAR': '﷼',
          'AED': 'د.إ',
          'THB': '฿',
          'VND': '₫',
          'IDR': 'Rp',
          'MYR': 'RM',
          'PHP': '₱',
          'SGD': 'S$',
          'HKD': 'HK$',
          'TWD': 'NT$',
          'NZD': 'NZ$',
          'EGP': 'E£',
          'ARS': '$',
          'CLP': '$',
          'COP': '$',
          'PEN': 'S/',
          'UYU': '$U',
          'PYG': '₲',
          'BOB': 'Bs.',
          'VES': 'Bs.',
          'CRC': '₡',
          'NIO': 'C$',
          'SVC': '$',
          'PAB': 'B/.',
          'GTQ': 'Q',
          'HNL': 'L',
          'BZD': 'BZ$',
          'JMD': 'J$',
          'TTD': 'TT$',
          'XCD': 'EC$',
          'BSD': 'B$',
          'KYD': 'CI$',
          'ANG': 'ƒ',
          'AWG': 'ƒ',
          'BBD': 'Bds$',
          'BMD': 'BD$',
          'BTN': 'Nu.',
          'GEL': '₾',
          'ISK': 'kr',
          'KZT': '₸',
          'LAK': '₭',
          'LKR': '₨',
          'MKD': 'ден',
          'MNT': '₮',
          'NPR': '₨',
          'PKR': '₨',
          'RON': 'lei',
          'RSD': 'дин',
          'TJS': 'ЅМ',
          'TMT': 'T',
          'UAH': '₴',
          'UZS': 'so\'m',
          'VUV': 'VT',
          'WST': 'WS$',
          'XAF': 'FCFA',
          'XOF': 'CFA',
          'XPF': '₣',
          'YER': '﷼',
          'ZMW': 'ZK',
          'ZWD': 'Z$'
        };
        return symbols[this.currency] || '$';
      },

      loadFromLocalStorage() {
        try {
          const stored = localStorage.getItem('guestWishlist');
          const parsed = stored ? JSON.parse(stored) : [];
          this.wishlistItems = parsed.map(item => ({
            ...item,
            id: item.productId,
            variantId: item.variantId || item.productId,
            productImage: item.productImage || item.image,
            productTitle: item.productTitle || item.title,
            price: item.price,
            denominations: item.denominations || '$10'
          }));
          this.count = this.wishlistItems.length;
        } catch (error) {
          console.error('Error loading from localStorage:', error);
          this.wishlistItems = [];
          this.count = 0;
        } finally {
          this.isLoading = false;
        }
      },

      saveToLocalStorage() {
        try {
          const toSave = this.wishlistItems.map(item => {
            const { id, ...rest } = item;
            return rest;
          });
          localStorage.setItem('guestWishlist', JSON.stringify(toSave));
        } catch (error) {
          console.error('Error saving to localStorage:', error);
        }
      },

      async fetchCount() {
        if (!this.isLoggedIn) return;
        try {
          const response = await fetch(`${this.apiUrl}/api/wishlist?customerId=${this.customerId}&shop=${this.shop}`);
          const data = await response.json();
          this.count = data.wishlists ? data.wishlists.length : 0;
          this.wishlistItems = (data.wishlists || []).map(item => ({
            ...item,
            variantId: item.variantId || item.productId,
            productImage: item.productImage || 'https://picsum.photos/200/300',
            productTitle: item.productTitle,
            price: parseFloat(item.price) || 0,
            denominations: item.denominations || '$10'
          }));
        } catch (error) {
          console.error('Error fetching wishlist:', error);
          this.count = 0;
          this.wishlistItems = [];
        } finally {
          this.isLoading = false;
        }
      },

      async fetchFullWishlist() {
        if (!this.isLoggedIn) return;
        await this.fetchCount();
      },

      handleUpdate(detail) {
        if (this.isLoggedIn) {
          if (detail.action === 'add') this.count++;
          else if (detail.action === 'remove') {
            if (detail.count) {
              this.count -= detail.count;
            } else {
              this.count--;
            }
          }
          this.fetchFullWishlist();
        } else {
          if (detail.action === 'add') this.count++;
          else if (detail.action === 'remove') {
            if (detail.count) {
              this.count -= detail.count;
            } else {
              this.count--;
            }
          }
          this.loadFromLocalStorage();
        }
      },

      goToWishlist() {
        this.showSlider = true;
        if (this.isLoggedIn) {
          this.fetchFullWishlist();
        } else {
          this.loadFromLocalStorage();
        }
      },

      async removeItem(id, productId) {
        if (this.isLoggedIn) {
          try {
            const formData = new FormData();
            formData.append('customerId', this.customerId);
            formData.append('productId', productId);
            formData.append('shop', this.shop);
            formData.append('_action', 'DELETE');

            const response = await fetch(`${this.apiUrl}/api/wishlist`, {
              method: 'POST',
              body: formData,
            });
            const data = await response.json();
            if (data.ok) {
              this.fetchFullWishlist();
              window.dispatchEvent(new CustomEvent('wishlist-updated', { detail: { action: 'remove' } }));
            }
          } catch (error) {
            console.error('Error removing item:', error);
          }
        } else {
          this.wishlistItems = this.wishlistItems.filter(item => item.id !== id);
          this.count = this.wishlistItems.length;
          this.saveToLocalStorage();
          window.dispatchEvent(new CustomEvent('wishlist-updated', { detail: { action: 'remove' } }));
        }
      },

      // REPLACED: Now uses EXACT same logic as Wishlist Page
      async addToCart(item) {
        try {
          const formData = new FormData();
          formData.append('id', item.variantId || item.productId);
          formData.append('quantity', 1);
          formData.append('form_type', 'product');
          formData.append('utf8', '✓');
          formData.append('product-id', item.productId);
          formData.append('section-id', 'template--19767170040036__main');
          formData.append('sections', 'cart-drawer,cart-icon-bubble');
          formData.append('selling_plan', '');
          formData.append('Denominations', item.denominations || '$10');

          const response = await fetch('/cart/add.js', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json',
              'X-Requested-With': 'XMLHttpRequest'
            }
          });

          const data = await response.json();

          if (response.ok) {
            toastr.success(`${item.productTitle} added to cart!`);

            // Close the wishlist drawer instantly
            this.showSlider = false;

            // Trigger cart update events
            document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart: data } }));
            document.dispatchEvent(new CustomEvent('cart:refresh', { detail: { cart: data } }));

            // Fetch and render updated sections (cart drawer, bubble, etc.)
            const sectionsResponse = await fetch(`/?sections=cart-drawer,cart-icon-bubble`);
            if (sectionsResponse.ok) {
              const sectionsData = await sectionsResponse.json();
              const parsedState = { sections: sectionsData, id: item.productId, item: data };
              const drawer = document.querySelector('cart-drawer');
              if (drawer && typeof drawer.renderContents === 'function') {
                drawer.renderContents(parsedState);
              }
            }
          } else {
            toastr.error(data.message || data.description || 'Failed to add to cart');
          }
        } catch (err) {
          console.error('Error adding to cart:', err);
          toastr.error(`Error: ${err.message || 'Failed to add to cart'}`);
        }
      },
    }));
  });
</script>

